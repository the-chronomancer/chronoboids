{
	"name": "chronoboids",
	"version": "2.0.0",
	"description": "2D flocking simulation using boids algorithm with GGDP optimizations",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write \"src/**/*.{ts,tsx,js,json,css,html}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,js,json,css,html}\"",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"boids",
		"flocking",
		"simulation",
		"pixi.js",
		"ggdp",
		"typescript"
	],
	"author": "cubedhuang",
	"license": "MIT",
	"dependencies": {
		"pixi.js": "^8.6.6"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@types/node": "^22.10.2",
		"@vitest/coverage-v8": "^2.1.8",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.14.0",
		"jiti": "^2.4.2",
		"prettier": "^3.4.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2",
		"vite": "^6.0.5",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
